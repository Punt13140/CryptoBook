{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Positions{% endblock %}

{% block body %}
    <h1>Position</h1>

    <table class="table table-bordered table-striped table-responsive-md table-dark">
        <tbody>
        <tr>
            <th>Id</th>
            <td class="text-white align-middle">{{ position.id }}</td>
        </tr>
        <tr>
            <th>OpenedAt</th>
            <td class="text-white align-middle">{{ position.openedAt ? position.openedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>NbCoins</th>
            <td class="text-white align-middle">{{ position.nbCoins }}</td>
        </tr>
        <tr>
            <th>IsOpened</th>
            <td class="text-white align-middle">{{ position.isOpened ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_position_index') }}">back to list</a>

    <a href="{{ path('app_position_edit', {'id': position.id}) }}">edit</a>

    {{ include('position/_delete_form.html.twig') }}
{% endblock %}
