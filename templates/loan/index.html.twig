{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Emprunts{% endblock %}


{% block javascripts %}
    {{ encore_entry_script_tags('position_index') }}
{% endblock %}

{% block body %}
    <div class="row mb-2">
        <div class="col">
            <h1>Mes emprunts</h1>
        </div>
        <div class="col text-end">
            <a href="{{ path('loan_new') }}" class="btn btn-warning m-2">Ajouter un emprunt</a>
        </div>
    </div>

    <p>
        Emprunt total : {{ total|number_format(0, '.', ' ') }} $
    </p>

    <div class="row">
        <div class="col">
            <table class="table table-bordered table-striped table-responsive-md table-dark">
                <thead>
                <tr>
                    <th></th>
                    <th>Coin</th>
                    <th>Valeur ($)</th>
                    <th class="th-actions">actions</th>
                </tr>
                </thead>
                <tbody>
                {% for loan in loans %}
                    <tr>
                        <td class="text-center align-middle">
                            <button id="btn-{{ loan.id }}" type="button" class="btn btn-xs btn-light infos_pos"
                                    data-id="{{ loan.id }}" data-ajax="{{ path('loan-infos-ajax', {'id': loan.id}) }}">
                                +
                            </button>
                        </td>
                        <td class="text-white align-middle">{{ loan.coin.symbol|upper }}</td>
                        <td class="text-white align-middle text-end">{{ (loan.nbCoins * loan.coin.priceUsd)|number_format(2, '.', ' ') }}
                            $
                        </td>
                        <td class="text-white align-middle text-center">
                            {{ include('loan/_indexactions_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col"></div>
    </div>



{% endblock %}
