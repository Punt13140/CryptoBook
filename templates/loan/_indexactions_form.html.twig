<form method="post" action="{{ path('loan_delete', {'id': loan.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ loan.id) }}">
    <div class="btn-group" role="group" aria-label="Basic outlined example">
        <a href="{{ path('loan_edit', {'id': loan.id}) }}" class="btn btn-outline-light">Modifier</a>
        <button type="submit" class="btn btn-outline-light">Supprimer</button>
    </div>
</form>
