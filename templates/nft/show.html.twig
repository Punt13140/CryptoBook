{% extends 'base.html.twig' %}

{% block title %}Nft{% endblock %}

{% block body %}
    <h1>Nft</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nft.id }}</td>
            </tr>
            <tr>
                <th>Collection</th>
                <td>{{ nft.collection }}</td>
            </tr>
            <tr>
                <th>Num</th>
                <td>{{ nft.num }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ nft.rank }}</td>
            </tr>
            <tr>
                <th>Supply</th>
                <td>{{ nft.supply }}</td>
            </tr>
            <tr>
                <th>PriceCrypto</th>
                <td>{{ nft.priceCrypto }}</td>
            </tr>
            <tr>
                <th>PriceUsd</th>
                <td>{{ nft.priceUsd }}</td>
            </tr>
            <tr>
                <th>PurchasedOn</th>
                <td>{{ nft.purchasedOn ? nft.purchasedOn|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>SoldOn</th>
                <td>{{ nft.soldOn ? nft.soldOn|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PriceSoldCrypto</th>
                <td>{{ nft.priceSoldCrypto }}</td>
            </tr>
            <tr>
                <th>PriceSoldUsd</th>
                <td>{{ nft.priceSoldUsd }}</td>
            </tr>
            <tr>
                <th>PercentSaleFees</th>
                <td>{{ nft.percentSaleFees }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('nft_index') }}">back to list</a>

    <a href="{{ path('nft_edit', {'id': nft.id}) }}">edit</a>

    {{ include('nft/_delete_form.html.twig') }}
{% endblock %}
